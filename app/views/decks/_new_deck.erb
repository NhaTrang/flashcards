<!-- New Deck Modal -->
<div id="newDeck" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title"><%= yield :modal_title %></h4>
      </div>
      <div class="modal-body">
		<%= form_for @deck do |f| %>
			<div class="form-group">
				<%= f.label :Name %><em>(Maximum 30 characters)</em></p>
				<%= f.text_field :title, class:"form-control", placeholder: 'Title of the Deck' %>
			</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <%= f.submit "Create", class: "btn btn-success pull-right" %>
      </div>
		<% end %>
    </div>

  </div>
</div>
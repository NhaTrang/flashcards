<div class="container">
	<div class="row row-header">
		<div class="col-md-12 col-sm-12 col-xs-12">
			<p style="padding-bottom:5%;"></p>

		</div>
	</div>

	<div class="row row-content">
		<div class="col-md-10 col-md-offset-1 col-sm-12 col-xs-12">
			<div class="col-md-12 col-sm-12 col-xs-12">
				<div class="btn-group col-md-12 col-sm-12 col-xs-12" style="margin-top:20px;">
					<%= link_to "Edit Card", '#', class: 'btn-info btn btn-sm', type:"button", 'data-toggle' => "modal", 'data-target' => "#newDeck" %>
					<%= link_to "Delete Card", '#', class: 'btn-danger btn btn-sm', type:"button", 'data-toggle' => "modal", 'data-target' => "#deleteDeck" %>
				</div>
			</div>
			<div class="col-md-12 col-sm-12 col-xs-12">
				<hr>
				<div class="col-md-12 col-sm-12 col-sm-12">
					<p style="padding-top:5px;"></p>
					<div class="deck-content col-md-12 col-xs-12 col-sm-12">
						<p><%= @card.front %></p>
						<p><%= @card.back %></p>
						
					</div>
				</div>
			</div>
		</div>
		<p style="padding-bottom: 20px;"></p>
		<%= render 'shared/returnfooter' %>
	</div>
</div>


<!-- New Card Modal -->
<div id="newCard" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Create New Card</h4>
      </div>
      <div class="modal-body">
		<%= form_for @card do |f| %>
			<div class="form-group">
				<%= f.label :Front %></p>
				<%= f.text_area :front, rows:5, class:"form-control", placeholder: 'Front of the card', required:true %>
			</div>
			<div class="form-group">
				<%= f.label :Back %></p>
				<%= f.text_area :back, rows: 5,class:"form-control", placeholder: 'Back of the card', required:true %>
			</div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <%= f.submit "Create", class: "btn btn-success pull-right" %>
      </div>
		<% end %>
    </div>

  </div>
</div>


<% provide :delete_id, "deleteCard" %>
<% provide :delete_path, card_path(@card) %>
<%= render 'shared/deletecontent' %>